                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT">
                    <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../../images/icono.png" />
                        </image>
                    </ImageView>
                </HBox>
            </items>
        </ToolBar>
    </top>
    <center>
        <StackPane style="-fx-background-color: white; -fx-padding: 20;">
            <children>
                <WebView fx:id="webView" />
                <VBox alignment="CENTER" spacing="10" visible="false" fx:id="panelVacio">
