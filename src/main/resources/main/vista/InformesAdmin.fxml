<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controlador.ControladorInformesAdmin" prefWidth="1200" prefHeight="720">
    <top>
        <ToolBar style="-fx-background-color: #0d4528; -fx-padding: 15 25;">
            <items>
                <Label text="Informes de AdministraciÃ³n" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" />
                <HBox spacing="15" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Tipo de informe:" style="-fx-text-fill: white;" />
                        <RadioButton text="Informe de Usuarios" fx:id="radioUsuarios" selected="true" style="-fx-text-fill: white;" />
                        <RadioButton text="Informe de Fincas" fx:id="radioFincas" style="-fx-text-fill: white;" />
                        <Button text="Generar informe" fx:id="btnGenerarInforme" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-background-radius: 5px;" onAction="#generarInforme" />
