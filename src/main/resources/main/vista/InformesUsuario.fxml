<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controlador.ControladorInformesUsuario" prefWidth="1200" prefHeight="720">
    <top>
        <ToolBar style="-fx-background-color: white; -fx-padding: 15 25;">
            <items>
                <Label text="Informes de Fincas" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #103a24;" />
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Seleccionar finca:" />
                        <ComboBox fx:id="comboFincas" promptText="Selecciona una finca" prefWidth="300" />
                        <Button text="Generar informe" fx:id="btnGenerarInforme" style="-fx-background-color: #0d4528; -fx-text-fill: white;" onAction="#generarInforme" />
                        <Button text="Descargar PDF" fx:id="btnDescargarPDF" style="-fx-background-color: #c62828; -fx-text-fill: white;" onAction="#descargarPDF" />
                        <Button fx:id="btnVolver" onAction="#volver">
                            <graphic>
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../images/flecha-atras.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <text>Volver</text>
                        </Button>
                    </children>
                </HBox>
            </items>
        </ToolBar>
    </top>
    <center>
        <StackPane style="-fx-background-color: white; -fx-padding: 20;">
            <children>
                <WebView fx:id="webView" />
                <VBox alignment="CENTER" spacing="10" visible="false" fx:id="panelVacio">
                    <children>
                        <Label text="Selecciona una finca y genera el informe" style="-fx-font-size: 16px; -fx-text-fill: #5f6b6f;" />
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>
</BorderPane>

