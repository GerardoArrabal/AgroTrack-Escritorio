<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controlador.DialogoFincaController" prefWidth="980" prefHeight="640" style="-fx-background-color: white;">
    <padding>
        <Insets top="18" right="18" bottom="18" left="18" />
    </padding>

    <left>
        <VBox spacing="14" prefWidth="360">
            <children>
                <Label fx:id="lblTitulo" text="Nueva finca" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #0d4528;" />

                <GridPane hgap="10" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="40" />
                        <ColumnConstraints percentWidth="60" />
                    </columnConstraints>
                    <children>
                        <Label text="Propietario:" GridPane.rowIndex="0" />
                        <ComboBox fx:id="comboPropietario" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Selecciona usuario" />

                        <Label text="Nombre:" GridPane.rowIndex="1" />
                        <TextField fx:id="campoNombre" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                        <Label text="Ubicación:" GridPane.rowIndex="2" />
                        <TextField fx:id="campoUbicacion" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                        <Label text="Superficie (ha):" GridPane.rowIndex="3" />
                        <TextField fx:id="campoSuperficie" GridPane.rowIndex="3" GridPane.columnIndex="1" promptText="0.00" />

                        <Label text="Tipo de suelo:" GridPane.rowIndex="4" />
                        <ComboBox fx:id="comboTipoSuelo" GridPane.rowIndex="4" GridPane.columnIndex="1" promptText="Ej. Franco" />

                        <Label text="Sistema de riego:" GridPane.rowIndex="5" />
                        <TextField fx:id="campoSistemaRiego" GridPane.rowIndex="5" GridPane.columnIndex="1" />

                        <Label text="Estado:" GridPane.rowIndex="6" />
                        <ComboBox fx:id="comboEstado" GridPane.rowIndex="6" GridPane.columnIndex="1" />

                        <Label text="Fecha registro:" GridPane.rowIndex="7" />
                        <DatePicker fx:id="pickerFechaRegistro" GridPane.rowIndex="7" GridPane.columnIndex="1" />
                    </children>
                </GridPane>

                <Label fx:id="lblError" textFill="#c62828" visible="false" />

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <children>
                        <Button onAction="#cancelar" style="-fx-background-color: transparent; -fx-border-color: #0d4528; -fx-text-fill: #0d4528;">
                            <graphic>
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../images/flecha-atras.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <text>Cancelar</text>
                        </Button>
                        <Button onAction="#guardar" style="-fx-background-color: #0d4528; -fx-text-fill: white;">
                            <graphic>
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../images/guardar.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <text>Guardar</text>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </left>

    <center>
        <VBox spacing="10" BorderPane.alignment="CENTER" style="-fx-padding: 0 0 0 18;">
            <children>
                <Label text="Delimita tu finca en el mapa" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                <StackPane fx:id="panelMapa" prefHeight="560" style="-fx-background-color: #f4f8f4; -fx-border-color: #cfe8d1; -fx-border-radius: 10;">
                    <children>
                        <WebView fx:id="webViewMapa" />
                        <ProgressIndicator fx:id="loadingMapa" visible="false" StackPane.alignment="CENTER" />
                    </children>
                </StackPane>
                <Label text="1. Inicia el dibujo · 2. Traza el perímetro · 3. Guarda las coordenadas antes de pulsar “Guardar”." wrapText="true" style="-fx-text-fill: #5f6b6f; -fx-font-size: 12px;" />
            </children>
        </VBox>
    </center>
</BorderPane>

