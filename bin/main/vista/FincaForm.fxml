<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controlador.DialogoFincaController" spacing="15" prefWidth="520" prefHeight="420" style="-fx-background-color: white;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    <children>
        <Label fx:id="lblTitulo" text="Nueva finca" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #0d4528;" />

        <GridPane hgap="10" vgap="12">
            <columnConstraints>
                <ColumnConstraints percentWidth="35" />
                <ColumnConstraints percentWidth="65" />
            </columnConstraints>
            <children>
                <Label text="Propietario:" GridPane.rowIndex="0" />
                <ComboBox fx:id="comboPropietario" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Selecciona usuario" />

                <Label text="Nombre de la finca:" GridPane.rowIndex="1" />
                <TextField fx:id="campoNombre" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="UbicaciÃ³n:" GridPane.rowIndex="2" />
                <TextField fx:id="campoUbicacion" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Superficie (ha):" GridPane.rowIndex="3" />
                <TextField fx:id="campoSuperficie" GridPane.rowIndex="3" GridPane.columnIndex="1" promptText="0.00" />

                <Label text="Tipo de suelo:" GridPane.rowIndex="4" />
                <ComboBox fx:id="comboTipoSuelo" GridPane.rowIndex="4" GridPane.columnIndex="1" promptText="Ej. Franco" />

                <Label text="Sistema de riego:" GridPane.rowIndex="5" />
                <TextField fx:id="campoSistemaRiego" GridPane.rowIndex="5" GridPane.columnIndex="1" />

                <Label text="Estado:" GridPane.rowIndex="6" />
                <ComboBox fx:id="comboEstado" GridPane.rowIndex="6" GridPane.columnIndex="1" />

                <Label text="Fecha registro:" GridPane.rowIndex="7" />
                <DatePicker fx:id="pickerFechaRegistro" GridPane.rowIndex="7" GridPane.columnIndex="1" />

                <Label text="Coordenadas / notas:" GridPane.rowIndex="8" />
                <TextArea fx:id="areaCoordenadas" GridPane.rowIndex="8" GridPane.columnIndex="1" prefRowCount="3" />
            </children>
        </GridPane>

        <Label fx:id="lblError" textFill="#c62828" visible="false" />

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <children>
                <Button text="Cancelar" onAction="#cancelar" style="-fx-background-color: transparent; -fx-border-color: #0d4528; -fx-text-fill: #0d4528;" />
                <Button text="Guardar" onAction="#guardar" style="-fx-background-color: #0d4528; -fx-text-fill: white;" />
            </children>
        </HBox>
    </children>
</VBox>

